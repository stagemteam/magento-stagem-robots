<?xml version="1.0"?>
<layout>
	<!-- Here, we reference the XML node path of our route -->
	<adminhtml_robots_index>
		<reference name="content">
			<!-- We also reference our block by namespacename_modulename/adminhtml_controllername, and name it uniquely -->
			<block type="stagem_robots/adminhtml_robots" name="robots.txt" />
		</reference>
	</adminhtml_robots_index>

	<adminhtml_robots_edit>
		<reference name="content">
			<!-- We also reference our block by namespacename_modulename/adminhtml_controllername, and name it uniquely -->
			<block type="stagem_robots/adminhtml_robots_edit" name="robots.txt.edit" />
		</reference>
	</adminhtml_robots_edit>
</layout>